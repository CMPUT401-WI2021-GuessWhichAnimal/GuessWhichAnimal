{
    "builders": [ {
        "type": "openstack",
        "flavor": "m1.micro",
        "image_name": "django-image",
        "source_image_name": "Ubuntu 18.04",
        "ssh_username": "ubuntu"
    } ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt update",
                "sudo apt install python3-pip",
                "pip3 install django==3.1.5"
            ]
        },
        {
            "type": "file",
            "source": "run_server",
            "destination": "home/ubuntu/run_server"
        },
        {
            "type": "file",
            "source": "../animal_app",
            "destination": "home/ubuntu/animal_app"
        }
    ]
    
}